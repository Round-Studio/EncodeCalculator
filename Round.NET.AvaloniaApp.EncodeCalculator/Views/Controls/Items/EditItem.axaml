<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Round.NET.AvaloniaApp.EncodeCalculator.Views.Controls.EditItem">
    <Grid>
        <StackPanel>
            <DockPanel Margin="5">
                <Label Width="90">项名称：</Label>
                <TextBox Name="NameBox" TextChanging="NameBox_OnTextChanging">Name</TextBox>
            </DockPanel>
            <DockPanel Margin="5">
                <Label Width="90">项值：</Label>
                <TextBox Name="ValueBox" TextChanging="ValueBox_OnTextChanging">Value</TextBox>
            </DockPanel>
            <DockPanel>
                <Button Name="DeleteItem" Click="DeleteItem_OnClick">删除项</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</UserControl>
