<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="220"
             Height="140"
             Background="Transparent"
             x:Class="Round.NET.AvaloniaApp.EncodeCalculator.Views.Controls.Nodes.NodeControl">
    <Border CornerRadius="11" Background="rgb(46,46,46)" Margin="5">
        <Grid>
            <Border CornerRadius="8" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="Green" Height="25">
                <Grid>
                    <Label HorizontalAlignment="Center" VerticalAlignment="Center">Name</Label>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3,0" Foreground="DarkGray">Type</Label>
                </Grid>
            </Border>
            <Label Margin="5,30">Value</Label>
        </Grid>
    </Border>
</UserControl>
