                            </HyperlinkButton>
                        </StackPanel>
                        <StackPanel Margin="45,10">
                            <HyperlinkButton NavigateUri="https://github.com/0x44614D696E67">
                                <DockPanel Margin="5">
                                    <Image Source="../../../Assets/PeopleAssets/DrMing.jpg" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
                                    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0">DrMing</Label>
                                </DockPanel>
                            </HyperlinkButton>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
